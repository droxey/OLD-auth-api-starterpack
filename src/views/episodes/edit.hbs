{{> header}}
  {{> nav}}

      <h1>Edit Episode</h1>
       <div style='width: 30%; margin: 25px auto;'>
      <form method='POST' action='/portlandia/episode/{{episode._id}}?_method=PUT'>
          <div class='form-group'>
              <label for='title'>Title</label><br>
              <input type='text' name='title' placeholder='Title' value='{{episode.title}}' /><br/>
          </div>
          <div class='form-group'>
              <label for='title'>Season</label><br>
              <input type='number' name='season' placeholder='season' value='{{episode.season}}' /><br/>
          </div>
          <div class='form-group'>
              <label for='number'>Episode Number</label><br>
              <input type='number' name='number' placeholder='episode number' value='{{episode.number}}'  /><br/>
          </div>
          <div class='form-group'>
              <label for='date'>Original Air Date</label><br>
              <input type='date' name='date' placeholder='date'  value='{{episode.date}}'/><br/>
          </div>
          <div class='form-group'>
              <label for='summary'>Summary</label>
               <textarea name='summary' class='form-control' id='post-summary' placeholder='Summary'></textarea><br/>
          </div>
          <div class='form-group'>
              <label for='image'>Image</label><br>
              <input type='text' name='image' placeholder='Image'  value='{{episode.image}}'/>
          </div>
        <input class='btn btn-primary' type='submit' value='Add' />

      </form>
  </div>
